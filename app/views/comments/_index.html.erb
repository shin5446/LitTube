<% comments.each do |comment| %>
  <% unless comment.id.nil? %>
    <p><%= link_to "#{comment.user.name}さん", user_path(comment.user.id) %></p>
    <p>コメント：<%= comment.content %></p>
    <% if comment.user == current_user %>
      <p><%= link_to 'コメントを削除する', video_comment_path(comment.video_id, comment.id), method: :delete, remote: true, class:"btn btn-danger btn-sm" %></p>
    <% end %>
  <% end %>
<% end %>