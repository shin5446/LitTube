 <div class="container h-100 search_box2">
    <div class="row h-100 justify-content-center align-items-center">
      <%= f.search_field :title_or_content_or_user_name_cont, required: true ,placeholder: '検索するテキストを入力...', class: "search_active2"%>
      <%= f.submit "検索",class: "btn btn-primary search_btn2" %>
