<br>
<%= search_form_for @q do |f| %>
 <div class="container h-100">
    <div class="d-flex justify-content-center h-100">
      <div class="searchbar">
          <%= f.search_field :title_or_content_or_user_name_cont, required: true ,placeholder: '検索するテキストを入力...', class: "search_input"%>
          <%= button_tag :type => "submit", :id =>"button", :class =>"btn mt-1 mr-1 mb-2" do %>
           <i class="fa fa-search"></i>
          <% end %>
      </div>
    </div>
  </div>
<% end %><br>

<div style="text-align: center" class="sort_btn">
  <%= active_link_to "新着順", videos_path(sort_created_at: true), class: "btn btn-outline-primary btn-sm w-25", active: :exact, active_disable: true %>
  <%= active_link_to "人気順", videos_path(sort_like: true), class: "btn btn-outline-primary btn-sm w-25", active: :exact, active_disable: true %>
</div>
<div class="px-2 py-3">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-3" style="text-align: center">
      <%= link_to new_video_path, class: "btn btn-primary" do %>
      <i class="fa fa-plus"> 新しく動画を投稿する</i>
      <% end %>
    </div>
  </div>
</div>

<div class="px-2 py-3">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-12 col-lg-3">
        <% if current_user %>
          <div class="card mb-3" style="text-align: center">
            <div class="card-header">
            <i class = "circle"><%= current_user.icon.url.present? ? image_tag(current_user.icon.url) : image_tag('default_icon.jpg') %></i> <%= current_user.name %>
            </div>
            <table>
              <tr>
                <td>フォロー数</td>
                <td>フォロワー数</td>
                </td>
              <tr>
                <td><%= current_user.following.count %></td>
                <td><%= current_user.followers.count %></td>
              </tr>
            </table>
          </div>
        <% end %>
        <div class="card mb-3">
          <div class="card-body">
            <h5>ジャンルから探す</h5>
            <% @genres.each do |genre| %>
              <%= link_to genre.name, videos_path(genre_id: genre.id), class: "btn btn-sm my-1 genre_btn" %>
            <% end %>
          </div>
        </div>
        <div class="card">
          <div class="card-body tag_box">
            <h5>タグから探す</h5>
            <% @tags.each do |tag| %>
            <%= link_to "#{tag.name}(#{tag.taggings_count})", videos_path(tag_name: tag.name), class: "btn btn-sm my-1 tag_btn" %>
          <% end %> <br>
          </div>
          <%= link_to tags_path, class: "text-dark" do %>
          <i class="fas fa-tags float-right mb-3 mr-3"> タグ一覧を見る</i>
        <% end %>
        </div>
      </div>

      <div class="col-12 col-sm-12 col-md-12 col-lg-9">
        <% @videos.each do |video| %>
          <div class="card mb-3">
            <div class="row">
              <div class="card-body col-12 col-sm-12 col-md-12 col-lg-6">
                <iframe width="350" height="200" src=<%= embed_url(video) %> allowfullscreen></iframe>
                <p><%= video.title %></p><hr>
                <p>投稿者: <i class = "circle"><%= video.user.icon.url.present? ? image_tag(video.user.icon.url) : image_tag('default_icon.jpg') %></i> <%= video.user.name %></p>
                <span><i class="far fa-heart"></i> <%= video.likes_count %> <i class="fas fa-comment comment"></i> <%= video.comments.count %></span>
                <span class="float-right"><%= "#{video.created_at}に投稿" %></span>
              </div>
              <div class="card-body col-12 col-sm-12 col-md-12 col-lg-6">
                <p>ジャンル:
                  <% video.genres.each do |genre| %>
                    <%= link_to genre.name, videos_path(genre_id: genre.id), class: "btn btn-sm my-1 genre_btn" %>
                  <% end %>
                </p>
                <p>タグ:
                  <%= render 'videos/tag_list', tag_list: video.tag_list %>
                </p>
                <br>
              <div class="nav_btn">
                  <ul>
                    <li>
                      <%= link_to video_path(video.id) ,class: "btn btn-primary btn-sm" do %>
                        <i class="fas fa-arrow-circle-right"></i> 詳細</i>
                      <% end %>
                    </li>
                    <% if current_user.try(:id) == video.user_id %>
                      <li>
                        <%= link_to edit_video_path(video), class: "btn btn-success btn-sm" do %>
                          <i class="fas fa-edit"> 編集</i>
                        <% end %>
                      <li>
                        <%= link_to video_path(video.id), method: :delete,data: { confirm: '本当に削除していいですか？'}, class: "btn btn-danger btn-sm" do %>
                          <i class="fas fa-trash-alt"> 削除</i>
                        <% end %>
                      </li>
                      <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <%= paginate @videos%>
      </div>
    </div>
  </div>
</div>