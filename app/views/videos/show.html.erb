<h1>動画詳細画面</h1>

<table class = "table table-hover" >
  <tr>
    <th>タイトル</th>
    <td><%= @video.title %></td>
  </tr>
    <th>内容</th>
    <td><%= @video.content %></td>
  </tr>
  </tr>
    <th>ジャンル</th>
    <% @video.genres.each do |genre| %>
      <td><%= genre.name %></td>
    <% end %>
    </tr>
</table>
<% unless @video.user_id == current_user.id %>
  <% if @like.present? %>
    <%= link_to 'いいね解除',like_path(id: @like.id), method: :delete, class: 'btn btn-danger btn-sm' %>
  <% else %>
    <%= link_to 'いいね',likes_path(video_id: @video.id), method: :post, class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>
<%= link_to '戻る', videos_path, class: "btn btn-outline-info btn-sm" %>